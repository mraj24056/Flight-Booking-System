<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <style>
        .container body-content {
            margin-top:10px;
        }
    </style>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark" style="background-color: #333;">
        <div class="container">
            @Html.ActionLink("✈ ARS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Admin Home", "AdminHome", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About Us", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    @*<li>@Html.ActionLink("Flight", "Index", "Flight", new { area = "" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("Airline", "Index", "Airline", new { area = "" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("Airport", "Index", "Airport", new { area = "" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("Schedule", "Index", "Schedule", new { area = "" }, new { @class = "nav-link" })</li>*@
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("LogOut", "SignOut", "Login", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="margin-top: 10px;">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Airline Reservation System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
