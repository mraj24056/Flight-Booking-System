<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airline Reservation System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
            background-image: url('../../images/14449-skyscrapers-bottom-view-plane-minimalism-4k.jpg');
            background-size: 100vw 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

            .header h1 {
                font-size: 36px;
                color: #333;
                margin: 0;
            }

        .hero-text {
            text-align: center;
            color: #fff;
        }

            .hero-text h2 {
                font-size: 48px;
                margin: 0;
            }

            .hero-text p {
                font-size: 24px;
                margin-top: 10px;
            }

        .cta-button {
            display: inline-block;
            padding: 12px 24px;
            background-color: #333;
            color: #fff;
            font-size: 20px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

        .cta-button-container {
            display: flex;
            justify-content: center;
        }

            .cta-button-container a {
                margin-top: auto;
                margin-bottom: auto;
            }

        .cta-button:hover {
            background-color: #555;
        }

        .features {
            margin-top: 50px;
        }

        .feature {
            display: flex;
            margin-bottom: 30px;
        }

        .feature-icon {
            flex: 0 0 80px;
            margin-right: 20px;
        }

        .feature-title {
            font-size: 24px;
            margin: 0;
        }

        .feature-description {
            font-size: 18px;
        }

        .footer {
            text-align: center;
            margin-top: 50px;
            padding: 20px 0;
            background-color: #333;
            color: #fff;
        }

            .footer p {
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1 style="color:white">Book Your Flights</h1>
            <br />
            <h3>"Experience the convenience of booking flights online."</h3>
        </div>
        <div class="hero-image">
            <div class="hero-text">
                <br />
                <br />
                @*<br />
                <br />
                <br />*@
                @*<br />
                <br />
                <br />
                <br />*@
                <br />
                <br />
                <div class="cta-button-container">
                    @Html.ActionLink("Get Started", "SignUp", "Login", null, new { @class = "cta-button" })
                </div>
            </div>
        </div>
    </div>
    @*<div class="footer">
            <p>&copy; 2023 Airline Reservation System. All rights reserved.</p>
        </div>*@
</body>
</html>
