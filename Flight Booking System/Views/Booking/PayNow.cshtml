@model Flight_Booking_System.Models.Payment

@{
    ViewBag.Title = "PayNow";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<body class="contain">
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Payment Details</h2>
        <div class="payform">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.PaymentDate, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.HiddenFor(model => model.PaymentDate, new { htmlAttributes = new { @class = "form-control" } })
                @Model.PaymentDate
                @Html.ValidationMessageFor(model => model.PaymentDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" id="cardtype">
                @Html.LabelFor(model => model.PaymentMode, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.HiddenFor(model => model.PaymentMode, new { htmlAttributes = new { @class = "form-control" } })
                @Model.PaymentMode
                @Html.ValidationMessageFor(model => model.PaymentMode, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.HiddenFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Model.Amount.00/-
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BookingId, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.HiddenFor(model => model.BookingId, new { htmlAttributes = new { @class = "form-control" } })
                @Model.BookingId
                @Html.ValidationMessageFor(model => model.BookingId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.HiddenFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                @Model.UserID
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ScheduleId, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.HiddenFor(model => model.ScheduleId, new { htmlAttributes = new { @class = "form-control" } })
                @Model.ScheduleId
                @Html.ValidationMessageFor(model => model.ScheduleId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group" id="type">
                @Html.LabelFor(model => model.CardType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <span class="control-label col-md-2">
                        @Html.DropDownListFor(model => model.CardType, new List<SelectListItem>() { new SelectListItem() { Text = "DebitCard", Value = "DebitCard" }, new SelectListItem() { Text = "CreditCard", Value = "CreditCard" } }, "Select", new { htmlAttributes = new { @class = "form-control" } })
                    </span>
                    @Html.ValidationMessageFor(model => model.CardType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, "Card Holder's Name", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="labels">
                    <div class="cardlabel">
                        <div class="radius">
                            @Html.LabelFor(model => model.CardNo, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
           
                    </div>
                    <div class="cvvlabel">
                        @Html.LabelFor(model => model.CVV, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </div>
                <div class="crdcvv">
                    <div class="card">
                        @Html.EditorFor(model => model.CardNo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="cvv">
                        @Html.EditorFor(model => model.CVV, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.CardNo, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.CVV, "", new { @class = "text-danger" })
            </div>




            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="submit" value="Pay Now!" class="btn btn-default" />*@
                    <br />
                    <button>
                        Pay Now !
                    </button>
                </div>
            </div>
        </div>
    </div>
}
</body>

<style>
    body {
        background-image: url('../../images/bg images/untitled.png');
        background-size:100% 100%;
    }
    .payform {
        padding:20px;
    }
    input{
        background-color:transparent;
    }
    button {
        padding: 1.3em 3em;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 2.5px;
        font-weight: 500;
        color: #000;
        background-color: #fff;
        border: none;
        border-radius: 45px;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease 0s;
        cursor: pointer;
        outline: none;
    }

        button:hover {
            background-color: #23c483;
            box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
            color: #fff;
            transform: translateY(-7px);
        }

        button:active {
            transform: translateY(-1px);
        }

        .crdcvv{
            display:flex;
        }

    .radius{
        border-radius:20px;
    }
    .cvvlabel {
        display: flex;
        padding-left: 217px;
        align-content: center;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: space-between;
    }

    input .form-control text-box single-line{
        width:100px;
    }

    .cvv{
        margin-left:40px;
        width:100px;
        display:flex;
        text-align-last:left;
    }

    .labels {
        display: flex;
    }
    .navbar{
        height:20px;
    }

    #cardtype{
        display:flex
    }

    #type{
        display:flex;
    }
    #cardtype{
        border-top: 0px;
        border-left: 0px;
        border-right: 0px;
    }

    p{
        margin-bottom:0rem;
    }

</style>
